@{
    ViewBag.Title = "Founders&Organisations";
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    @*<link type="text/css" rel="stylesheet" href="~/Content/Site.css" />*@
    <title>Organisations</title>
</head>
<body>
    <div>
        <h3>Organisations:</h3>
        <table @*border="1"*@>
            <tr>
                <td>ORG ID</td>
                <td>ORG NAME</td>
                <td>ORG INN</td>
            </tr>
            <tr></tr>
            @foreach(var o in ViewBag.Organisations)
            {
                <tr>
                    <td><p>@o.ID</p></td>
                    <td><p>@o.Name</p></td>
                    <td><p>@o.INN</p></td>
                    <td><p><a href="/Home/ViewOrg/@o.ID">Смотреть</a></p></td>
                </tr>
            }
        </table>
        <a href="/Home/AddOrg/">Добавить организацию</a>
    </div>
</body>
</html>

